<% layout('/layouts/Boiler Plate') %>
    <div class="row d-flex justify-content-center p-2" style="flex: 1;">
        <div class="card bg-light p-3 border border-success rounded-3 width-forty">
            <h1 class="text-center mb-3">Create a new story</h1>
            <div class="col-lg-10 offset-lg-1">
                <p class="mb-3 mt-2 mandatory">* Mandatory Fields</p>
                <form action="/stories" method="post" class="d-inline needs-validation" novalidate
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Story Title<span class="mandatory">*</span> : </label>
                        <input type="text" class="form-control" name="story[title]" id="title"
                            placeholder="Enter story title" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid title.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Story Location (Optional) : </label>
                        <input type="text" class="form-control" name="story[location]" id="location"
                            placeholder="Enter story location">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="images" class="form-label">Upload Story Images (Optional) : </label>
                        <input type="file" class="form-control" name="story[images]" id="images"
                            accept="image/avif, image/gif, image/jpg, image/jpeg, image/png, image/webp" multiple>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Story Description<span class="mandatory">*</span> :
                        </label>
                        <textarea class="form-control" name="story[description]" id="description" cols="80" rows="10"
                            placeholder="Enter story description" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid description.
                        </div>
                    </div>
                    <div>
                        <label class="form-label mb-3">To create, click on submit</label>
                    </div>
                    <button type="submit" class="btn btn-success btn-sm">Create Story</button>
                    <button type="reset" class="btn btn-danger btn-sm">Reset</button>
                </form>
                <a href="/stories" class="btn btn-secondary btn-sm">Go Back</a>
            </div>
        </div>
    </div>